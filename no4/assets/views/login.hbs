<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    {{! NavBar }}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img
            src="https://avatars3.githubusercontent.com/u/34464790?s=220&v=4"
            style="height:50px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/collections">Collections</a>
              </li>
            {{/if}}
          </ul>
          {{#if isLogin}}
            <p>Hi, {{user.username}}</p>
            <button class="btn btn-outline-success" style="margin-right:25px">
              <a href="/logout" style="text-decoration:none; color:black">
                Log out
              </a>
            </button>
          {{else}}
            <button class="btn btn-outline-success" style="margin-right:25px">
              <a href="/login" style="text-decoration:none; color:black">
                Login
              </a>
            </button>
            <button class="btn btn-outline-success">
              <a href="/register" style="text-decoration:none; color:black">
                Register
              </a>
            </button>
          {{/if}}
        </div>
      </div>
    </nav>
    {{! Body }}
    <div class="container-fluid w-50 my-5">
      <H1 class="text-center">LOGIN</H1>
      {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">
          <div class="container">
            {{messages.danger}}
          </div>
        </div>
      {{/if}}
      <div class="card p-5" style="margin-top:50px">
        <form method="post" action="/login">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </div>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>