<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Collections</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    {{! NavBar }}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img
            src="https://avatars3.githubusercontent.com/u/34464790?s=220&v=4"
            style="height:50px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link active" href="/collections">Collections</a>
              </li>
            {{/if}}
          </ul>
          {{#if isLogin}}
            <p>Hi, {{user.username}}</p>
            <button class="btn btn-outline-success" style="margin-right:25px">
              <a href="/logout" style="text-decoration:none; color:black">Log
                out</a>
            </button>
          {{else}}
            <button class="btn btn-outline-success" style="margin-right:25px">
              <a
                href="/login"
                style="text-decoration:none; color:black"
              >Login</a>
            </button>
            <button class="btn btn-outline-success">
              <a
                href="/register"
                style="text-decoration:none; color:black"
              >Register</a>
            </button>
          {{/if}}
        </div>
      </div>
    </nav>
    {{! Body }}
    <h1 class="container-fluid m-5">My Collections</h1>
    {{#if messages.danger}}
      <div class="alert alert-danger" role="alert">
        <div class="container">
          {{messages.danger}}
        </div>
      </div>
    {{/if}}
    <div class="container-fluid m-5">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        {{#each collections}}
          <div class="col">
            <div class="card">
              <img
                src="https://icons.veryicon.com/png/o/miscellaneous/media-cloud-20-left-menu-bar-icon/task-17.png"
                class="card-img-top"
                alt="img"
                style="height:200px; width:fit-content; margin-right:0px"
              />
              <div class="card-body">
                <h5 class="card-title">
                  <a
                    href="/collections-detail/{{this.id}}"
                    style="text-decoration:none; color:black"
                  >{{this.name}}</a>
                  <form method="POST" action="/delete-collections/{{this.id}}">
                    <button
                      type="submit"
                      class="btn btn-danger ms-auto"
                    >Delete</button>
                  </form>
                </h5>
              </div>
            </div>
          </div>
        {{/each}}
        {{! Add Collections }}
        <div class="col">
          <div class="card">
            <a href="/add-collection">
              <img
                src="https://static.vecteezy.com/system/resources/previews/010/160/090/original/add-icon-sign-symbol-design-free-png.png"
                class="card-img-top"
                alt="..."
                style="height:300px; width:fit-content"
              />
            </a>
          </div>
        </div>
      </div>
    </div>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</html>